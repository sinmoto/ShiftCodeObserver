{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types"
    ],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ]
}
